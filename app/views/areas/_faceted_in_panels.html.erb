
<% @browser.facets.each do |key, facet| %>
  <h3 id="<%= facet[:id] %>"> <%= link_or_value facet[:label], facet[:id] %> </h3>
      <ul class="list-group" >
      <% facet[:solutions].each do |solution| %>
          <li class="list-group-item">
            <h5>
          <div class="span6">
            <p>
            <% resource_id =  @browser.relation_value_for_label(solution, @browser.labels[1]) %>
            <%= link_or_value @browser.value(solution, @browser.labels[1]), resource_id %> 
            </p>
          </div>
          <div class="span1">
            <p>
            <% column = @browser.labels[2] %>
            <%= area_icon(@browser.value(solution, column)) %>
            </p>
          </div>

            </h5>
          </li>
      <% end %>
      </ul>

  <hr />
<% end %>

