<tr>
  <% value = @resource.attributes.send(:"#{att}") %>
  <% description = Resource::Base.description_of(att)%>

  <td><strong><%= labelize([value].flatten.first.type) %> <%= link_to("<i class='icon-question-sign'></i>".html_safe, resource_path(att), :title => description, :"data-toggle" => "tooltip", :rel => "tooltip") if description %></strong></td>
  <td>
    <%  if value.kind_of?(Array) %>
      <ul>
        <% value.each do |v| %>
          <li><%= link_or_value v.label %></li>
        <% end %>
      </ul>
    <% else %>
      <%= link_or_value value.label.to_s %>
    <% end %>
  </td>
</tr>

