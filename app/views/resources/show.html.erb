<!-- QUERY SPARQL
<%= @query.html_safe %>
-->
<table class="table table-hover table-condensed table-bordered">
  <thead>
  <tr>
    <th colspan="2"> Attributes </th>
  </tr>
</thead>

<tbody>

<tr>
  <td><strong>Name</strong></td>
  <td><%= @resource.label %> </td>
</tr>
  
<tr>
  <td><strong>Type</strong></td>
  <td><%= @resource.type %> </td>
</tr>
<% @priority_attr.each do |att| %>
  <%= render :partial => 'resource', :locals => {:att => att} if @resource.attr_list.include? att%>
<% end %>

<% @attributes.each do |att| %>
  <%= render :partial => 'resource', :locals => {:att => att} %>
<% end %>

</tbody>
</table>
  

<% unless @browser_related.solutions.empty? %>
<table class="table table-hover table-condensed table-bordered">
  <thead>
  <tr>
    <th>
Other resources with related to this <%= @resource.type %>  
    
    </th>
  </tr>
    
  </thead>
  <tbody>
    
<% @browser_related.solutions.each do |solution| %>
<tr>
  <% @browser_related.labels.each do |column| %>
    <% if @browser_related.label_has_id? column %>
      <td><%= link_to labelize(@browser_related.value(solution, column)), resource_path(@browser_related.relation_value_for_label(solution, column)) %> </td>
    <% else %>
      <td><%= @browser_related.value(solution, column) %> </td>
    <% end %>
  <% end %>
<% end %>
</tr>
  </tbody>
</table>
<% end %>

<% content_for :header do %>
  <h1><%= @resource.label %> <small> <%= @resource.type %></small></h1>
<% end %>

