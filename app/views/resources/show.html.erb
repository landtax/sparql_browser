
<h1>Service</h1>

<h4>Attributes</h4>

<table class="table table-hover">
<% @resource.attr_list.each do |att| %>
<tr>
  <td><%= att.tableize.humanize %></td>
  <td>
    <% value = @resource.attributes.send(att.to_sym) %>

    <%  if value.kind_of?(Array) %>
      <ul>
        <% value.each do |v| %>
          <li><%= v %></li>
        <% end %>
      </ul>
    <% else %>
      <%= value %>
    <% end %>
    
  </td>
</tr>
  <% end %>
  
</table>
