<div class="page-header">
  <h1><%= @type_name.humanize.pluralize %> <small> Complete list</small></h1>
</div>

<table class="table table-hover">
<% @browser.solutions.each do |solution| %>
<tr>
  <% @browser.labels.each do |column| %>
    <% if @browser.label_has_id? column %>
      <td><%= link_to labelize(@browser.value(solution, column)), resource_path(@browser.relation_value_for_label(solution, column)) %> </td>
    <% else %>
      <td><%= @browser.value(solution, column) %> </td>
    <% end %>
  <% end %>
<% end %>
</tr>
</table>

<% content_for :sidebar do %>
<div id="sidebar"  role="complementary">

  <h4><%= @type_name.humanize.pluralize %></h4>
  <h5> Sort by facet: </h5>
  <ul class="nav">
    <% @type.facets_available.each do |facet| %>
      <li class="bs-facet-item"> <%= link_to facet, facet_path(@type_name, facet) %> </li>
    <% end %>
  </ul>
</div><!--/.well -->
<% end %>

