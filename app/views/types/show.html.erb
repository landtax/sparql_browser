<div class="page-header">
  <%= facets_for_type @type, @facet %>
<h1><%= @type_name.humanize.pluralize %></h1>

<% if @facet %>
  <h5><%= optionize(@facet) %></h5>
<% end %>

</div>

<table class="table table-hover">
<% @browser.solutions.each do |solution| %>
<tr>
  <% @browser.labels.each do |column| %>
    <% if @browser.label_has_id? column %>
      <td><%= link_to labelize(@browser.value(solution, column)), resource_path(@browser.relation_value_for_label(solution, column)) %> </td>
    <% else %>
      <td><%= @browser.value(solution, column) %> </td>
    <% end %>
  <% end %>
</tr>
<% end %>
</table>

