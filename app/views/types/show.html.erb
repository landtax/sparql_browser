<div class="page-header">
  <h1><%= @type_name.humanize.pluralize %> <small> Complete list</small></h1>
</div>

<table class="table table-hover table-condensed table-bordered">
<% @browser.solutions.each do |solution| %>
<tr>
  <% @browser.labels.each do |column| %>
    <% if @browser.label_has_id? column %>
      <td><%= link_to @browser.value(solution, column), resource_path(@browser.relation_value_for_label(solution, column)) %> </td>
    <% else %>
      <td><%= @browser.value(solution, column) %> </td>
    <% end %>
  <% end %>
<% end %>
</tr>
</table>

<% content_for :sidebar do %>
<div id="sidebar"  role="complementary">

  <h5> List by: </h5>
  <div class="list-group">
    <% @type.facets_available.each do |facet| %>
      <%= link_to labelize(facet), facet_path(@type_name, facet), :class => "list-group-item" %>
    <% end %>
  </div>
</div><!--/.well -->
<% end %>

