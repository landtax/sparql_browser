<div class="row">
  <div class="col-lg-8">
    <h1><%= @type_name.humanize.pluralize %> <small> <%= optionize(@facet) %> </small></h1>
  </div>
</div>

<%= render :partial => "faceted_in_panels" %>

<% content_for :sidebar do %>

  <div id="facets_sidebar">
    <div class="row">
      <p><%= facets_for_type @type, @facet %></p>

      <div class="list-group">
        <% @browser.facets.each do |key, facet| %>
          <%= link_to(truncate(labelize(facet[:label] ), length: 90), "##{facet[:id]}", :class => "list-group-item") %>
      <% end %>
      </div>
    </div>
  </div>

<% end %>

